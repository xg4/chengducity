  "main": "index.js",
  "scripts": {
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "db:generate": "yarn typeorm migration:generate -p -n",
    "db:migrate": "yarn typeorm migration:run",
    "serve": "ts-node server/app.ts",
    "dev": "nodemon --warch server --ext ts --exec yarn serve",
    "build": "next build ./client",
    "start": "cross-env NODE_ENV=production yarn serve",
    "heroku-postbuild": "yarn db:migrate && yarn build",
    "pretty": "prettier --write client/**/*.ts* server/**/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run pretty",
      "git add"
    ]
  },
  "dependencies": {
    "@types/cors": "^2.8.10",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.32",
    "@types/node-fetch": "^2.5.8",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/uuid": "^8.3.0",
    "cheerio": "^1.0.0-rc.5",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "next": "^10.0.8",
    "node-fetch": "^2.6.1",
    "pg": "^8.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reflect-metadata": "^0.1.13",
    "telegraf": "^4.1.2",
    "ts-node": "^9.1.1",
    "typeorm": "^0.2.31",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.3"
  }
}
